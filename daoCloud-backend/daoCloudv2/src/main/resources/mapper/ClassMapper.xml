<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzu.gcxl.daocloud.domain.persistence.ClassRepository">

    <insert id="createNewClass" parameterType="Class">
        insert into class (user_phone, class_name, class_member, class_num)
        values (#{userPhone},#{className},#{classMember},#{classNum})
    </insert>

    <resultMap type="com.fzu.gcxl.daocloud.domain.entity.Class" id="ClassList">
        <result column="class_id" property="classId"/>
        <result column="class_name" property="className"/>
        <result column="class_member" property="classMember"/>
        <result column="class_num" property="classNum"/>
    </resultMap>

    <select id="getClassesByUser" resultMap="ClassList">
        select * from daocloud.class where user_phone = #{userPhone};
    </select>

    <select id="findClassByName" resultType="Class">
        select * from daocloud.class where class_name = #{classname};
    </select>

    <select id="findClassByNum" resultType="Class">
        select * from daocloud.class where class_num = #{classnum};
    </select>

</mapper>